<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.Home">
   <children>
      <!-- Header -->
      <VBox styleClass="header">
         <children>
            <Label fx:id="welcomeLabel" styleClass="header-title" text="Welcome!" />
            <Label styleClass="header-subtitle" text="Discover amazing events near you" />
         </children>
      </VBox>

      <!-- Search and Categories -->
      <VBox styleClass="content" spacing="20.0">
         <children>
            <!-- Search Bar -->
            <TextField fx:id="searchField" styleClass="search-input" promptText="Search events..." onAction="#handleSearch" />

            <!-- Categories -->
            <VBox spacing="10.0">
               <children>
                  <Label styleClass="info-label" text="Categories" />
                  <ScrollPane fitToHeight="true">
                     <content>
                        <HBox fx:id="categoriesHBox" styleClass="categories" spacing="10.0">
                           <!-- Categories will be added dynamically -->
                        </HBox>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
         </children>
      </VBox>

      <!-- Events List -->
      <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
         <content>
            <VBox styleClass="content">
               <children>
                  <VBox spacing="10.0">
                     <children>
                        <Label styleClass="info-label" text="Upcoming Events" />
                        <VBox fx:id="eventListVBox" spacing="15.0">
                           <!-- Events will be added dynamically -->
                        </VBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>

      <!-- Bottom Navigation -->
      <HBox styleClass="bottom-nav" spacing="0.0">
         <children>
            <VBox alignment="CENTER" styleClass="nav-item,active" HBox.hgrow="ALWAYS">
               <children>
                  <Label styleClass="nav-icon" text="ðŸ " />
                  <Label styleClass="nav-label" text="Home" />
               </children>
            </VBox>
            <VBox alignment="CENTER" styleClass="nav-item" HBox.hgrow="ALWAYS" onMouseClicked="#switchToTickets">
               <children>
                  <Label styleClass="nav-icon" text="ðŸŽ«" />
                  <Label styleClass="nav-label" text="Tickets" />
               </children>
            </VBox>
            <VBox alignment="CENTER" styleClass="nav-item" HBox.hgrow="ALWAYS" onMouseClicked="#switchToProfile">
               <children>
                  <Label styleClass="nav-icon" text="ðŸ‘¤" />
                  <Label styleClass="nav-label" text="Profile" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>

   <!-- ADD THIS SECTION - Same as in Login.fxml -->
   <stylesheets>
      <URL value="@styles.css" />
   </stylesheets>
</VBox>