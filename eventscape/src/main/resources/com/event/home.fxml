<VBox alignment="TOP_CENTER" spacing="15.0"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.controllers.Home"
      style="-fx-background-color: #F0F8FF; -fx-padding: 30;">

    <children>
        <Label fx:id="welcomeLabel" text="Welcome!" style="-fx-font-size: 24px; -fx-text-fill: #333;" />
        
        <VBox fx:id="eventListVBox" spacing="10.0">
            
        </VBox>

        <Button fx:id="secondaryButton"
                text="Switch to Primary View"
                onAction="#switchToPrimary"
                style="-fx-background-color: #00bfff; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8px 16px;" />
    </children>
</VBox>
